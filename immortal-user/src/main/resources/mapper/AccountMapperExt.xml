<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.net.immortal.user.mapper.AccountMapperExt" >
  <resultMap id="BaseResultMap" type="cn.net.immortal.user.mapper.entity.Account" extends="cn.net.immortal.user.mapper.AccountMapper.BaseResultMap" />

  <select id="selectByAccount" resultMap="BaseResultMap">
    select id, password, email
    from account
    <where>
     and email = #{email,jdbcType=BIGINT}
     and validate = 1
    </where>
  </select>
</mapper>